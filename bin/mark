#!/usr/bin/env node

var fs = require('fs');
var homedir = process.env.HOME || process.env.HOMEPATH || process.env.USERPROFILE;
var directory = process.argv[3]||process.cwd();
var markName=process.argv[2]||"default";
var markFile=homedir+"/.marked_destinations";
var markSet;
var readline = require('readline');

var rl = readline.createInterface({
  input: process.stdin,
	output: process.stdout
});


try {
	markSet = JSON.parse(fs.readFileSync(markFile, 'utf8'));
}catch(e){
	markSet = { }
}

if(markSet[markName]){
	rl.question("would you like to overwrite it? [ Y/n ] ", function(answer) {
		if(answer.toLowerCase().trim()!='n'){
			markSet[markName] = directory;
			console.error("overwriting marker");
			fs.writeFileSync(markFile, JSON.stringify(markSet))
		}else{
			console.error("exiting");
		}
		rl.close();
	});
}else{
	markSet[markName] = directory;
	fs.writeFileSync(markFile, JSON.stringify(markSet))
}
